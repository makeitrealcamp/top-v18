{
  "env": {
      "browser": true,
      "es2021": true,
      "cypress/globals": true
  },
  "extends": [
      "react-app",
      "plugin:react/recommended",
      "airbnb",
      "plugin:prettier/recommended"
  ],
  "plugins": [
      "cypress"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prop-types": 0,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js"],
      "rules": {
        "no-unused-expressions": "off",
        "func-names": "off"
      }
    }
  ]
}
